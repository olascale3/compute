[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "PORT=5000 HOSTNAME=0.0.0.0 node apps/web/.next/standalone/apps/web/server.js"]
build = ["bash", "-c", "pnpm install && cd apps/web && pnpm run build && cd ../.. && cp -r apps/web/public apps/web/.next/standalone/apps/web/public && cp -r apps/web/.next/static apps/web/.next/standalone/apps/web/.next/static"]
