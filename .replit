[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
NEXT_PUBLIC_APP_URL = "https://3396dfef-2d93-444d-b318-22aad56c1146-00-2slmeou4por29.worf.replit.dev"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && pnpm exec next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "corepack enable && cd apps/web && pnpm exec next start -p 5000 -H 0.0.0.0"]
build = ["bash", "-c", "corepack enable && corepack prepare pnpm@9.15.0 --activate && pnpm install --frozen-lockfile && cd apps/web && pnpm exec next build"]
